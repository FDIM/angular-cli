{
  "extends": "<%= relativePathToWorkspaceRoot %>/tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= relativePathToWorkspaceRoot %>/out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "<%= rootInSrc ? '' : 'src/' %>test.ts",
    "<%= rootInSrc ? '' : 'src/' %>polyfills.ts"
  ],
  "include": [
    "<%= rootInSrc ? '' : 'src/' %>test.generated.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
